{
  "name": "ai-chang",
  "version": "1.0.1",
  "description": "AI-powered changelog generator based on git changes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "bin": {
    "ai-chang": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "changelog": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "changelog",
    "release-notes",
    "ai",
    "git",
    "openai",
    "automation",
    "git-changelog",
    "release-management"
  ],
  "author": "Viktor Shcheglov",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "dotenv": "^16.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/viktorshcheglov/ai-chang"
  },
  "bugs": {
    "url": "https://github.com/viktorshcheglov/ai-chang/issues"
  },
  "homepage": "https://github.com/viktorshcheglov/ai-chang#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
